@model CitiFine.Models.Violation

@{
    ViewData["Title"] = "Pay Fine";
}

<h1>Pay Fine</h1>

<div>
    <h4>Violation: @Model.ViolationType</h4>
    <p>Amount Due: $@Model.FineAmount</p>

    <form method="post" action="@Url.Action("CreateCheckoutSession", "Payment", new { violationId = Model.ViolationId })">
        <button type="submit">Pay with Stripe</button>
    </form>
</div>

