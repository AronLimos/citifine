@model CitiFine.Models.Violation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Violation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ViolationId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViolationId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ViolationType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ViolationType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FineAmount)
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.FineAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateIssued)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateIssued)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsPaid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPaid)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ViolationId">Edit</a>
        <a asp-action="Index">Back to List</a>
    }
    else if (User.IsInRole("Officer"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ViolationId">Edit</a>
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        @if (!Model.IsPaid)
        {
            @* <a asp-action="PayFine" asp-route-id="@Model?.ViolationId">Pay Fine</a> *@
            <form method="post" action="@Url.Action("CreateCheckoutSession", "Payment", new { violationId = Model.ViolationId })">
                <button type="submit">Pay Fine</button>
            </form>
        }
        <a asp-action="Index">Back to List</a>
    }
</div>