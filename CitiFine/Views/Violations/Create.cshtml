@model CitiFine.Models.Violation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Violation Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- License Plate Selection -->
        <form asp-action="Create" method="get">
            <div class="form-group">
                <label class="control-label">License Plate</label>
                <select class="form-control" name="licensePlate" asp-items="ViewBag.LicensePlates" onchange="this.form.submit();"></select>
            </div>
        </form>

        <!-- Violation Form -->
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Violation Type</label>
                <select asp-for="ViolationType" class="form-control" asp-items="ViewBag.ViolationTypes"></select>
                <span asp-validation-for="ViolationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fine Amount</label>
                <input asp-for="FineAmount" class="form-control" />
                <span asp-validation-for="FineAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date Issued</label>
                <input asp-for="DateIssued" class="form-control" />
                <span asp-validation-for="DateIssued" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label class="control-label">User ID</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
