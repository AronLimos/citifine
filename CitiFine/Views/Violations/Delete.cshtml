@model CitiFine.Models.Violation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Violation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Violation ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViolationId)
        </dd>
        <dt class="col-sm-2">
            License Plate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.LicensePlate)
        </dd>
        <dt class="col-sm-2">
            Violation Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViolationType)
        </dd>
        <dt class="col-sm-2">
            Fine Amount
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.FineAmount)
        </dd>
        <dt class="col-sm-2">
            Date Issued
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateIssued)
        </dd>
        <dt class = "col-sm-2">
            Paid
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPaid)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ViolationId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>

</div>
